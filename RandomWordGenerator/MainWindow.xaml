<Window x:Name="mainWindow" x:Class="RandomWordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Random Word Get" Height="291" Width="307" Loaded="mainWindow_Loaded" MinHeight="300" MinWidth="307">
    <Grid>
        <TextBox x:Name="outputTB" Margin="10,10,10,40" TextWrapping="Wrap" Text="TextBox" IsReadOnly="True"/>
        <Button x:Name="generateButton" Content="Generate new set..." HorizontalAlignment="Right" Margin="0,7,10,10" VerticalAlignment="Bottom" Width="120" Click="generateButton_Click"/>
        <Button x:Name="editButton" Content="Edit words..." HorizontalAlignment="Right" Margin="0,0,140,10" VerticalAlignment="Bottom" Width="80" Click="editButton_Click"/>
        <Button x:Name="reloadButton" Content="Reload" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,230,10" Click="reloadButton_Click" Width="50"/>

    </Grid>
</Window>
